= form_for @book do |f|
  -if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field.mt10
    = f.label :title
    = f.text_field :title, required: 'required', size: 64
    %span.error *
  .field.mt10
    = f.label :category
    = f.select :category, options_for_select(Book::CATEGORIES), class: 'category', title: 'Click to select category'
  
  .mt20
    = f.submit 'Save'

